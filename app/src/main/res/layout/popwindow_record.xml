<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/infowindowshape"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="LF"
                android:textSize="@dimen/sp_25"
                android:textColor="@color/black"
                android:fontFamily="@font/neverland"/>

            <TextView
                android:id="@+id/txt_lf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:text="0.9851"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/blue"
                android:fontFamily="@font/neverland"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="SDNN"
                android:textSize="@dimen/sp_25"
                android:textColor="@color/black"
                android:fontFamily="@font/neverland"/>

            <TextView
                android:id="@+id/txt_sdnn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:text="0.9851"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/blue"
                android:fontFamily="@font/neverland"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="HF"
                android:textSize="@dimen/sp_25"
                android:textColor="@color/black"
                android:fontFamily="@font/neverland"/>

            <TextView
                android:id="@+id/txt_hf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:text="0.9851"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/blue"
                android:fontFamily="@font/neverland"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dp_250"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_gravity="center"
        app:srcCompat="@drawable/divider"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_individual"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_5"
        app:tabGravity="fill"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_individual"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_270"
        android:paddingTop="@dimen/dp_10"/>

    <Button
        android:id="@+id/record_ok"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/buttonborder2"
        android:text="確認"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:fontFamily="@font/jf_openhuninn"/>

</LinearLayout>