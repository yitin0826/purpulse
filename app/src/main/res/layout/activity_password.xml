<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dp_20"
    android:background="@drawable/backcolor"
    tools:context=".PasswordActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_16">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            android:paddingLeft="@dimen/dp_10"
            android:backgroundTint="@null"
            android:background="@null"
            app:srcCompat="@drawable/chevron_back_svgrepo_com"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/logo_horizontal" />

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_180"
        android:text="請輸入您註冊的信箱"
        android:fontFamily="@font/jf_openhuninn"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_25" />

    <EditText
        android:id="@+id/pw_email"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_38"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/textinputborder"
        android:ems="8"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/pw_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:backgroundTint="#FFFFFF"
        android:background="@drawable/buttonborder"
        android:text="確認"
        android:textColor="#1b75bb"
        android:textSize="@dimen/sp_20"
        android:fontFamily="@font/jf_openhuninn"/>

</LinearLayout>