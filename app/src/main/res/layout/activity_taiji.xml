<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result.TaijiActivity"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/dp_12"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="2"
            app:srcCompat="@mipmap/logo_horizontal" />

        <Space
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"/>

    </LinearLayout>

    <com.example.purpulse.result.TaijiView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_55"
        android:layout_marginEnd="@dimen/dp_55"/>

    <ImageView
        android:layout_width="@dimen/dp_250"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_gravity="center"
        app:srcCompat="@drawable/divider"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_45"
        android:text="太極圖說明："
        android:textColor="@color/blue"
        android:textSize="@dimen/sp_15"
        android:fontFamily="@font/jf_openhuninn"/>

    <ListView
        android:id="@+id/list_taiji"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_330"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_55"
        android:layout_marginEnd="@dimen/dp_55"
        android:divider="#00ffffff"
        android:dividerHeight="3dp"/>

</LinearLayout>