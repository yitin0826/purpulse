<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".connection.RighthandFragment"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:src="@drawable/righthand"/>

    <TextView
        android:id="@+id/txt_rightteach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:fontFamily="@font/jf_openhuninn"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_15"
        android:lineSpacingExtra="@dimen/dp_4"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/black"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"/>

    <Button
        android:id="@+id/btn_ecgnext"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_10"
        android:text="下一頁"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/white"
        android:background="@drawable/buttonborder2"/>

</LinearLayout>