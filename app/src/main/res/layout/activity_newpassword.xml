<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dp_20"
    android:background="@drawable/backcolor"
    tools:context=".NewpasswordActivity"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_16">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_80"
            android:paddingLeft="@dimen/dp_10"
            android:backgroundTint="@null"
            android:background="@null"
            app:srcCompat="@drawable/chevron_back_svgrepo_com"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/logo_horizontal" />

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_180"
        android:text="更改密碼"
        android:fontFamily="@font/jf_openhuninn"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_5"
        android:text="請輸入您要更改的密碼"
        android:fontFamily="@font/jf_openhuninn"
        android:textColor="@color/gray"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <RelativeLayout
        android:id="@+id/relativ_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/np_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/np_txt2"
            android:text="密碼："
            android:textSize="@dimen/sp_23"
            android:fontFamily="@font/jf_openhuninn"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/np_password"
            android:layout_width="@dimen/dp_185"
            android:layout_height="@dimen/dp_31"
            android:layout_toRightOf="@+id/np_txt1"
            android:background="@drawable/textinputborder"
            android:ems="8"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/np_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/np_txt1"
            android:layout_marginTop="@dimen/dp_22"
            android:text="密碼確認："
            android:textSize="@dimen/sp_23"
            android:fontFamily="@font/jf_openhuninn"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/np_password2"
            android:layout_width="@dimen/dp_185"
            android:layout_height="@dimen/dp_31"
            android:layout_below="@+id/np_password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_alignEnd="@+id/np_password"
            android:background="@drawable/textinputborder"
            android:ems="8"
            android:textSize="@dimen/sp_20"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <Button
        android:id="@+id/np_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:backgroundTint="#FFFFFF"
        android:background="@drawable/buttonborder"
        android:text="確認"
        android:textColor="#1b75bb"
        android:textSize="@dimen/sp_20"
        android:fontFamily="@font/jf_openhuninn"/>

</LinearLayout>