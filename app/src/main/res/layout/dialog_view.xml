<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/infowindowshape"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:text="請問您的測量狀態為？"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/blue"
        android:fontFamily="@font/jf_openhuninn"
        android:lineSpacingExtra="@dimen/dp_10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_45"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"

            android:background="@drawable/spinnerstyle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_150"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_10"
            android:text="是"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/white"
            android:fontFamily="@font/jf_openhuninn"
            android:background="@drawable/dialogbutton"/>

        <Button
            android:id="@+id/btn_no"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_35"
            android:text="否"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/white"
            android:fontFamily="@font/jf_openhuninn"
            android:background="@drawable/dialogbutton"/>

    </LinearLayout>

</LinearLayout>